@using CTO.Price.Admin.Services
@using CTO.Price.Admin.Data

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Price Admin v@(Program.Version)</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@(NavMenuCssClass!)" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <AuthorizeView Policy="@RolePolicy.Home.ToString()">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span> Home
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView Policy="@RolePolicy.Upload.ToString()">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="upload">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Upload
                </NavLink>
            </li>
		 </AuthorizeView>
        <AuthorizeView Policy="@RolePolicy.PriceEventsLog.ToString()">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="priceeventslog">
                    <span class="oi oi-plus" aria-hidden="true"></span> Price Events Log
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView Policy="@RolePolicy.SystemLog.ToString()">
        	<li class="nav-item px-3">
                <NavLink class="nav-link" href="systemlog">
                    <span class="oi oi-plus" aria-hidden="true"></span> System Log
        	    </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView Policy="@RolePolicy.AuditLog.ToString()">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="auditlog">
                    <span class="oi oi-plus" aria-hidden="true"></span> Audit Log
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView Policy="@RolePolicy.RegisterUser.ToString()">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="registeruser">
                    <span class="oi oi-plus" aria-hidden="true"></span> Register user
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView Policy="@RolePolicy.RegisterRole.ToString()">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="registerrole">
                    <span class="oi oi-plus" aria-hidden="true"></span> Register role
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView Policy="@RolePolicy.Version.ToString()">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="version">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Version
                </NavLink>
            </li>
        </AuthorizeView>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}